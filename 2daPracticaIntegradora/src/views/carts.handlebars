{{!-- Esta pagina es estática, como pide la consigna, se da la vista al cargar pero
no cambia hasta refrescar --}}
<h1>Bienvenidos al servidor express - Joyería Puga</h1> <br>
<h2>Vista de su Carrito de compra</h2>
  
{{#if isValid}}
    <div class="table-responsive tabla">
        <table class="table table-primary table-striped">
            <thead>
                <tr>
                    <th scope="col"> Código </th>
                    <th scope="col"> Nombre </th>
                    <th scope="col"> Descripción </th>
                    <th scope="col"> Categoría </th>
                    <th scope="col"> Precio </th>
                    <th scope="col"> Cantidad </th>
                    <th scope="col"> Imagen </th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <th scope="row"> {{this.product.code}} </th>
                        <th scope="row"> {{this.product.title}}</th>
                        <th scope="row"> {{this.product.description}}</th>
                        <th scope="row"> {{this.product.category}} </th>
                        <th scope="row"> {{this.product.price}}</th>
                        <th scope="row"> {{this.quantity}}</th>
                        <th scope="row"> <img src="{{this.product.thumbnail}}" alt="products" width="200" height="100"></th>     
                    </tr>
                {{/each}}
            </tbody>
        </table>    
    </div>
{{else}}    
    <h2 style="color: chocolate;">No se encontraron productos en su carrito </h2>
{{/if}}
<br/>
<button id="viewProduct" class="btn btn-secondary"> Comprar Productos</button>
<button id="goHome" class="btn btn-secondary"> Ir al Home</button>

<script src="/js/index.js"></script>